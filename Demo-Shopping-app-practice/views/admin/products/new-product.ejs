<%- include("../../shared/includes/head", {title: "Add new product"}) %> 
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>

    <main>
        <h1>Add New Product</h1>

        <form action="/admin/products/?_csrf=<%=locals.csrfToken%>" method="POST" enctype="multipart/form-data">

            <p>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </p>

            <p>
                <label for="image">Image</label>
                <input 
                type="file" 
                name="image" 
                id="image" 
                accept="image/jpg,image/jpeg,image/png" 
                required>
            </p>

            <p>
                <label for="summary">Summary</label>
                <input type="text" name="summary" id="summary" maxlength="250" required>
            </p>

            <p>
                <label for="price">Price</label>
                <input type="number" name="price" id="price" min="10" step="1" required>
            </p>

            <p>
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="7"></textarea>
            </p>

            <p>
                <button type="reset" class="btn btn-alt">Reset</button>
                <button type="submit" class="btn">Save</button>
            </p>

        </form>
    </main>

    <%- include("../../shared/includes/footer") %>
        
