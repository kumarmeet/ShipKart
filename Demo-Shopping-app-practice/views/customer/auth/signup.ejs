<%- include("../../shared/includes/head", {title: "Signup"}) %> 
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>

    <main>
        <h1>Create New Account</h1>

        <% if(sessionData.errorMessage) {%>
            
            <section class="alert">
                <h2>Invalid credentials</h2>
                <p><%= sessionData.errorMessage %></p>
            </section>

        <% } %>

        <form action="/signup" method="POST">

            <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>">

            <p>
                <label for="email">E-Mail</label>
                <input 
                type="email" 
                name="email" 
                id="email"
                value="<%=sessionData.email%>" 
                required>
            </p>


            <p>
                <label for="confirm-email">Confirm E-mail</label>
                <input 
                type="email" 
                name="confirm-email" 
                id="confirm-email" 
                value="<%=sessionData.confirmEmail%>"
                required>
            </p>

            <p>
                <label for="password">Password</label>
                <input 
                type="password" 
                name="password" 
                id="password" 
                value="<%=sessionData.password%>"
                minlength="6" 
                required>
            </p>

            <hr>

            <p>
                <label for="fullname">Full Name</label>
                <input 
                type="text" 
                name="fullname" 
                id="fullname" 
                value="<%=sessionData.name%>"
                required>
            </p>

            <p>
                <label for="street">Street</label>
                <input 
                type="text" 
                name="street" 
                id="street" 
                value="<%=sessionData.street%>"
                required>
            </p>

            <p>
                <label for="postal">Postal Code</label>
                <input 
                type="text" 
                name="postal" 
                id="postal" 
                value="<%=sessionData.postal%>"
                minlength="5" 
                maxlength="6" 
                required>
            </p>

            <p>
                <label for="city">City</label>
                <input 
                type="text" 
                name="city" 
                id="city" 
                value="<%=sessionData.city%>"
                required>
            </p>
            
            <button class="btn" type="submit">Create Account</button>
            
            <p id="switch-form"><a href="/login">Login Instead</a></p>
        </form>
    </main>

    <%- include("../../shared/includes/footer") %>
        
