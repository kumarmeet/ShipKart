<!-- due to enctype attribute csrf token will be used in action after query -->
<form
  action="<%= submitPath %> ?_csrf=<%= locals.csrfToken %>"
  method="POST"
  enctype="multipart/form-data"
>
  <p>
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= product.title %>"
      required
    />
  </p>

  <p>
    <label for="image">Image</label>
    <input
      type="file"
      name="image"
      id="image"
      accept="image/png, image/jpg, image/jpeg"
    />
  </p>

  <p>
    <label for="summary">Summary</label>
    <input
      type="text"
      name="summary"
      id="summary"
      value="<%= product.summary %>"
      maxlength="240"
      required
    />
  </p>

  <p>
    <label for="price">Price</label>
    <input
      type="number"
      name="price"
      id="price"
      value="<%= product.price %>"
      min="50"
      step="50"
      required
    />
  </p>

  <p>
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="10" required><%= product.description %></textarea
    >
  </p>

  <p>
    <button class="btn btn-alt" type="reset">Reset</button>
    <button class="btn" type="submit">Submit</button>
  </p>
</form>
